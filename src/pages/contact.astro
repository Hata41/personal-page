---
import BaseLayout from '../layouts/BaseLayout.astro';
import CopyEmailButton from '../components/CopyEmailButton.tsx';
import { getEntry } from 'astro:content';

const profile = await getEntry('profile', 'profile');
---

<BaseLayout title="Contact" description="Contact information for Sebastian Reboul">
  <h1>Contact</h1>

  <p><strong>Name:</strong> {profile.data.name}</p>
  <p><strong>Title:</strong> {profile.data.title}</p>
  <p><strong>Affiliation:</strong> {profile.data.affiliation}</p>
  <p><strong>Advisor:</strong> {profile.data.advisor}</p>

  <p><strong>Email:</strong> {profile.data.email} <CopyEmailButton email={profile.data.email} client:load /></p>

  <p><strong>Address:</strong> {profile.data.address}</p>

  {profile.data.phone && <p><strong>Phone:</strong> {profile.data.phone}</p>}

  <h2>Links</h2>
  <ul>
    {Object.entries(profile.data.links).map(([key, value]) => <li><a href={value}>{key}</a></li>)}
  </ul>
</BaseLayout>